<%= form_with model: post do |form| %>
<div class="create-tweet__block">

    <%= embedded_svg('noun-genders-1496720', class: 'logged-in-as__user-logo') %>
    <%= form.text_area :body, placeholder: "What's happening?", class: "create-tweet__tweet-input" %>
    <% post.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>

</div>
    <div class="create-tweet__flex-submit">
    <%= form.submit "Post", :class => "create-tweet__submit" %>
    </div>
<% end %>
