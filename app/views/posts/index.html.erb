    </div>
    <div class="layout__main">
        <h3>Posts</h3>

        <% if logged_in? %>
            <%= link_to "Create Post", new_post_path %>
        <% end %>

        <% @posts.each do |post|%>
        <div class="tweet">
            <%=image_tag 'meandpercy.jpeg', :class => "tweet__author-logo" %>
            <div class="tweet__main">
                <div class="tweet__header">
                    <div class="tweet__author-name">
                        <%= find_username_by_id(post.user_id)%>
                    </div>
                    <div class="tweet__author-slug">
                        @<%= find_username_by_id(post.user_id)%>
                    </div>
                    <div class="tweet__publish-time">
                        <%= post.created_at %>
                    </div>
                </div>
                <div class="tweet__content">
                    <%= link_to post.body, post %><br>
                </div>
            </div>


        </div>
        <% end %>

    </div>
    <div class="layout__right-sidebar-container">
        <div class="layout__right-sidebar">
            <h3>Right Sidebar</h3>
        </div>
