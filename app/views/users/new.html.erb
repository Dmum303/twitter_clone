<div class="layout">
    <div class="layout__left-sidebar">
        <div class="contain">
          <%= render "sidebar-menu"%>
        </div>
    </div>

    <div class="layout__main">
<h1>Create your account</h1>

<%= form_with(model: @user, local: true) do |f| %>

<div class="form-group">
  <%= f.label :email %><br/>
  <%= f.text_field :username, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :username %><br/>
  <%= f.text_field :screen_name, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :your_name %><br/>
  <%= f.text_field :real_name, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :password %><br/>
  <%= f.password_field :password, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.submit %>
</div>

<% end %>
</div>
  <%=render "rightside-content"%>
</div>
